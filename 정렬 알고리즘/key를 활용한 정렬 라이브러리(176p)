array = [('바나나', 2), ('사과', 5), ('당근', 3)]

result = sorted(array)
print(result)

#output
#[('당근', 3), ('바나나', 2), ('사과', 5)]               #하나나로 바꾸면 당근->사과->하나나 순으로 정렬됨을 확인할 수 있음.

#-------------------------------------------------

array = [('바나나', 2), ('사과', 5), ('당근', 3)]

def setting(data):
    return data[1]

result = sorted(array, key=setting)
print(result)

#output
#[('바나나', 2), ('당근', 3), ('사과', 5)]
